<Window x:Class="Bank.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank"
        mc:Ignorable="d"
        Title="Registration" Height="210" Width="300">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="40,34,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="40,83,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" FontSize="14"/>

        <TextBox Name="RegNameBox" HorizontalAlignment="Left" Height="21" Margin="125,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="132"/>
        <TextBox Name="RegPasswordBox" HorizontalAlignment="Left" Height="21" Margin="125,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="132"/>
        
        <Button Name="ConfirmButton" Content="Confirm" HorizontalAlignment="Left" Margin="108,136,0,0" VerticalAlignment="Top" Width="75" Click="ConfirmButton_Click"/>
    </Grid>
</Window>
